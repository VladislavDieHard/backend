generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("NEST_DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Department {
  id      String  @id @default(uuid())
  title   String  @db.VarChar(200)
  slug    String  @unique
  entries Entry[]
}

model Entry {
  id           String     @id @default(uuid())
  preview      String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  publishedAt  DateTime   @default(now())
  title        String     @db.VarChar(200)
  desc         String?    @db.VarChar(600)
  content      String?    @db.VarChar(4000)
  slug         String     @unique
  published    Boolean    @default(false)
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String
  rubric       Rubric?    @relation(fields: [rubricId], references: [id])
  rubricId     String?
  affiche      Affiche?   @relation(fields: [afficheId], references: [id])
  afficheId    String?    @unique
  MenuItem     MenuItem[]
}

model Document {
  id       String     @id @default(uuid())
  title    String     @db.VarChar(200)
  content  String     @db.VarChar(4000)
  preview  String?
  MenuItem MenuItem[]
}

model Affiche {
  id         String   @id @default(uuid())
  eventDate  DateTime @default(now())
  title      String   @db.VarChar(200)
  desc       String   @db.VarChar(600)
  eventPlace String
  phone      String   @db.VarChar(20)
  slug       String   @unique
  entry      Entry?
}

model Rubric {
  id      String  @id @default(uuid())
  title   String  @db.VarChar(200)
  slug    String  @unique
  entries Entry[]
}

enum MenuType {
  COMMON
  ABOUT
  COLLEAGUES
  DOCUMENTS
}

model Menu {
  id        String     @id @default(uuid())
  title     String
  menuType  MenuType
  menuItems MenuItem[]
}

enum MenuItemType {
  ENTRY
  DOCUMENT
  LINK
}

model MenuItem {
  id           String       @id @default(uuid())
  title        String
  menu         Menu         @relation(fields: [menuId], references: [id])
  menuId       String
  menuItemType MenuItemType
  slug         String
  document     Document?    @relation(fields: [documentId], references: [id])
  documentId   String?
  entry        Entry?       @relation(fields: [entryId], references: [id])
  entryId      String?
  link         String?
}

model MainSlider {
  id          String @id @default(uuid())
  title       String
  description String
  image       String
}

enum FileTypes {
  IMAGE
  DOCUMENT
  ARCHIVE
}

model File {
  id           String    @id @default(uuid())
  originalName String    @db.VarChar(200)
  mimeType     String    @db.VarChar(50)
  type         FileTypes
  path         String    @db.VarChar(400)
  createdAt    DateTime  @default(now())
}
