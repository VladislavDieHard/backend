generator client {
  provider = "prisma-client-js"
}

generator prismaClassGenerator {
  provider = "prisma-class-generator"
}

datasource db {
  provider = "mysql"
  url      = env("NEST_DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Department {
  id      String  @id @default(uuid())
  oldId   Int?    @unique
  preview File?   @relation(fields: [fileId], references: [id])
  fileId  String?
  title   String  @unique @db.VarChar(200)
  slug    String  @unique
  entries Entry[]
}

model Entry {
  id           String      @id @default(uuid())
  oldId        Int?        @unique
  preview      File?       @relation(fields: [fileId], references: [id])
  fileId       String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  publishedAt  DateTime    @default(now())
  title        String      @db.VarChar(200)
  desc         String?     @db.LongText
  content      String?     @db.LongText /// ckeditor
  slug         String      @unique
  published    Boolean     @default(false)
  mainSlider   MainSlider?
  department   Department  @relation(fields: [departmentId], references: [id])
  departmentId String
  rubric       Rubric?     @relation(fields: [rubricId], references: [id])
  rubricId     String?
  affiche      Affiche?    @relation(fields: [afficheId], references: [id])
  afficheId    String?     @unique
}

model Document {
  id         String   @id @default(uuid())
  oldId      Int?     @unique
  title      String   @db.VarChar(200)
  content    String   @db.LongText /// ckeditor
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  menuItemId String   @unique
  preview    File?    @relation(fields: [fileId], references: [id])
  fileId     String?
}

model Affiche {
  id         String   @id @default(uuid())
  oldId      Int?     @unique
  eventDate  DateTime @db.Date()
  eventTime  DateTime @db.Time()
  title      String   @db.VarChar(200)
  desc       String   @db.VarChar(600) /// ckeditor
  eventPlace String
  phone      String   @db.VarChar(20)
  slug       String   @unique
  entry      Entry?
}

model Rubric {
  id      String  @id @default(uuid())
  oldId   Int?    @unique
  title   String  @unique @db.VarChar(200)
  slug    String  @unique
  entries Entry[]
}

enum MenuType {
  COMMON
  ABOUT
  COLLEAGUES
  DOCUMENTS
}

model Menu {
  id        String     @id @default(uuid())
  oldId     Int?       @unique
  title     String     @unique
  menuType  MenuType
  menuItems MenuItem[]
}

enum MenuItemType {
  DOCUMENT
  LINK
}

model MenuItem {
  id           String       @id @default(uuid())
  oldId        Int?         @unique
  title        String       @unique
  menu         Menu         @relation(fields: [menuId], references: [id])
  menuId       String
  menuItemType MenuItemType
  slug         String
  document     Document?
  link         String?
}

model MainSlider {
  id      String  @id @default(uuid())
  oldId   Int?    @unique
  title   String
  entry   Entry   @relation(fields: [entryId], references: [id])
  entryId String  @unique
  desc    String  @db.VarChar(200) /// ckeditor
  image   File?   @relation(fields: [fileId], references: [id])
  fileId  String?
}

enum FileTypes {
  IMAGE
  DOCUMENT
  ARCHIVE
  EXHIBITION
}

model File {
  id           String       @id @default(uuid())
  originalName String       @db.VarChar(200)
  mimeType     String       @db.VarChar(50)
  type         FileTypes
  path         String       @db.VarChar(400)
  createdAt    DateTime     @default(now())
  Entry        Entry[]
  Document     Document[]
  MainSlider   MainSlider[]
  Department   Department[]
}
